# ============================================
# S&S Messebau - Hostinger Configuration
# ============================================
# This file ensures maximum compatibility with Hostinger/Apache servers
# for the Vite-based React SPA (Single Page Application)

# Enable RewriteEngine for URL handling
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force HTTPS (redirect HTTP to HTTPS)
  # NOTE: COMMENTED OUT - Hostinger handles HTTPS redirects automatically at server level
  # Enabling both server-level and .htaccess redirects causes ERR_TOO_MANY_REDIRECTS
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Redirect www to non-www (canonical domain)
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

  # Trailing-slash consistency: remove trailing slash (except root)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} (.+)/$
  RewriteRule ^ %1 [R=301,L]

  # Clean URLs: All routes are handled by the SPA fallback below.
  # Legacy hash-based URLs (#/page) are redirected client-side in App.tsx.

  # Handle SPA routing - Send all requests to index.html
  # except for files that actually exist and API routes
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteCond %{REQUEST_URI} !^/api/ [NC]
  RewriteRule . /index.html [L]
</IfModule>

# ============================================
# COMPRESSION - Enable gzip for better performance
# ============================================
<IfModule mod_deflate.c>
  # Compress HTML, CSS, JavaScript, Text, XML and fonts
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
  AddOutputFilterByType DEFLATE application/x-font
  AddOutputFilterByType DEFLATE application/x-font-opentype
  AddOutputFilterByType DEFLATE application/x-font-otf
  AddOutputFilterByType DEFLATE application/x-font-truetype
  AddOutputFilterByType DEFLATE application/x-font-ttf
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE font/opentype
  AddOutputFilterByType DEFLATE font/otf
  AddOutputFilterByType DEFLATE font/ttf
  AddOutputFilterByType DEFLATE font/woff
  AddOutputFilterByType DEFLATE font/woff2
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE image/x-icon
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml

  # Remove browser bugs (only needed for really old browsers)
  BrowserMatch ^Mozilla/4 gzip-only-text/html
  BrowserMatch ^Mozilla/4\.0[678] no-gzip
  BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
  Header append Vary User-Agent
</IfModule>

# ============================================
# BROWSER CACHING - Set expiration headers
# ============================================
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Video
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType video/webm "access plus 1 year"
  
  # Fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # Data
  ExpiresByType application/json "access plus 0 seconds"
  ExpiresByType application/xml "access plus 0 seconds"
  ExpiresByType text/xml "access plus 0 seconds"
  
  # HTML (no cache for SPA)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Alternative cache-control headers
<IfModule mod_headers.c>
  # Cache static assets for 1 year
  <FilesMatch "\.(ico|jpg|jpeg|png|gif|webp|avif|svg|css|js|woff|woff2|ttf|otf)$">
    Header set Cache-Control "max-age=31536000, public, immutable"
  </FilesMatch>
  
  # Don't cache HTML
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
  </FilesMatch>
</IfModule>

# ============================================
# SECURITY HEADERS (HTML documents only)
# ============================================
# These headers are designed for browser-rendered documents (HTML pages).
# API responses (JSON from /api/) unset these in api/.htaccess because
# CSP, X-Frame-Options and COOP are meaningless on fetch() JSON responses
# and can cause unexpected side-effects on some browsers/proxies.
<IfModule mod_headers.c>
  # Prevent MIME sniffing (safe for all response types)
  Header always set X-Content-Type-Options "nosniff"

  # Referrer Policy (safe for all response types)
  Header always set Referrer-Policy "strict-origin-when-cross-origin"

  # HSTS - Force HTTPS (safe for all response types)
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

  # Remove server signature (safe for all response types)
  Header unset Server
  Header unset X-Powered-By

  # --- Document-only headers (unset in api/.htaccess) ---

  # Prevent clickjacking
  Header always set X-Frame-Options "DENY"

  # XSS protection
  Header always set X-XSS-Protection "1; mode=block"

  # Permissions Policy
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()"

  # Content Security Policy
  # script-src: 'unsafe-inline' kept because index.html has inline bootstrap scripts
  # connect-src: 'self' covers /api/ calls (same-origin)
  # frame-src: https://www.google.com needed for Google Maps embed on /kontakt
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://images.unsplash.com https://media.istockphoto.com; connect-src 'self' https://api.sendgrid.com; frame-src 'self' https://www.google.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; object-src 'none'; upgrade-insecure-requests"

  # Cross-Origin isolation
  Header always set Cross-Origin-Opener-Policy "same-origin"
</IfModule>

# ============================================
# MIME TYPES - Ensure proper content types
# ============================================
<IfModule mod_mime.c>
  # JavaScript
  AddType application/javascript js mjs
  AddType application/json json
  
  # Fonts
  AddType font/woff woff
  AddType font/woff2 woff2
  AddType font/ttf ttf
  AddType font/otf otf
  AddType application/vnd.ms-fontobject eot
  
  # Images
  AddType image/webp webp
  AddType image/avif avif
  AddType image/svg+xml svg svgz
  
  # Video
  AddType video/mp4 mp4
  AddType video/webm webm
  
  # Other
  AddType text/css css
  AddType text/html html htm
</IfModule>

# ============================================
# ERROR PAGES
# ============================================
# Custom error pages (optional)
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# ============================================
# FILE ACCESS RESTRICTIONS
# ============================================
# Deny access to hidden files (except .well-known for Let's Encrypt)
<FilesMatch "^\.(?!well-known)">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# Deny access to sensitive files
<FilesMatch "(^package\.json$|^package-lock\.json$|^composer\.json$|^composer\.lock$|^\.git|^\.env)">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# ============================================
# PHP SETTINGS
# ============================================
# NOTE: php_flag engine off was removed - it was incorrectly placed in the
# root .htaccess and disabled PHP execution for the entire site (including /api/).
# If you need to disable PHP in a specific directory (e.g., uploads), add it there.

# ============================================
# UTF-8 ENCODING
# ============================================
AddDefaultCharset UTF-8
<IfModule mod_mime.c>
  AddCharset UTF-8 .html .css .js .xml .json .txt
</IfModule>

# ============================================
# DIRECTORY LISTING - Disable for security
# ============================================
Options -Indexes

# ============================================
# PERFORMANCE - Enable Keep-Alive
# ============================================
<IfModule mod_headers.c>
  Header set Connection keep-alive
</IfModule>
